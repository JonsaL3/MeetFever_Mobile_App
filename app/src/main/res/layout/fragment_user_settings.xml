<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_perfil"
    android:backgroundTintMode="multiply"
    android:background="@drawable/ic_solid_background_profile">

    <ImageView
        android:id="@+id/color_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background_gradient_shape_profile"
        android:backgroundTintMode="multiply"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/color_fondo_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background_gradient_shape_profile"
        android:backgroundTintMode="multiply"
        android:visibility="visible"
        android:rotation="180"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Ajustes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ajustes_del_usuario"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textoInformacionGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/seleccionar_im_genes"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gris_textos"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/foto_perfil"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_default_user_image"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buscar_foto_perfil"
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:text="@string/buscar"
                        android:textColor="@color/white"
                        android:background="@drawable/anim_button_pressed"
                        android:fontFamily="@font/montserrat_light"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/boton_sacar_foto_perfil"
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:text="@string/hacer_foto"
                        android:textColor="@color/white"
                        android:background="@drawable/anim_button_pressed"
                        android:fontFamily="@font/montserrat_light"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/foto_fondo"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_default_user_image"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buscar_foto_fondo"
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:text="@string/buscar"
                        android:textColor="@color/white"
                        android:background="@drawable/anim_button_pressed"
                        android:fontFamily="@font/montserrat_light"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/boton_sacar_foto_fondo"
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:text="@string/hacer_foto"
                        android:textColor="@color/white"
                        android:background="@drawable/anim_button_pressed"
                        android:fontFamily="@font/montserrat_light"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/informaci_n_del_usuario"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gris_textos"/>

            <EditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/ic_inputs_login"
                android:ems="10"
                android:gravity="center"
                tools:text="Juan@pepe.com"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/montserrat_light"
                android:textSize="15sp"
                android:layout_marginTop="40dp"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_textos"
                android:enabled="false"
                />

            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/ic_inputs_login"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/nickname"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/montserrat_light"
                android:textSize="15sp"
                android:layout_marginTop="40dp"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_textos"
                />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/ic_inputs_login"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/tel_fono"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/montserrat_light"
                android:textSize="15sp"
                android:layout_marginTop="40dp"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_textos"
                />

            <EditText
                android:id="@+id/frase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/ic_inputs_login"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/frase"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/montserrat_light"
                android:textSize="15sp"
                android:layout_marginTop="40dp"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_textos"
                />

            <LinearLayout
                android:id="@+id/datos_empresa"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/informaci_n_de_la_empresa"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/gris_textos"/>

                <EditText
                    android:id="@+id/nombre_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/nombre_empresa"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/cif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/cif"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/direccion_facturacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/direcci_n_de_facturaci_n"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/direccion_fiscal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/direcci_n_fiscal"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/nombre_persona_fisica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/nombre_de_la_persona_f_sica"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/apellido_1_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/apellido_1_persona_f_sica"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/apellido_2_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/apellido_2_persona_f_sica"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/dni_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/dni_de_la_persona_f_sica"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/datos_persona"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/informaci_n_de_la_persona"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/gris_textos"/>

                <EditText
                    android:id="@+id/nombre_persona_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/nombre_persona"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/apellido_persona_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/apellido_1"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/apellido_2_persona_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/apellido_2"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <EditText
                    android:id="@+id/dni_persona_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/dni_de_la_persona"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_sexo_persona"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    />

                <EditText
                    android:id="@+id/fecha_nacimiento_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/ic_inputs_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/fecha_de_nacimiento"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gris_textos"
                    android:textColorHint="@color/gris_textos"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirmar_cambios"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:text="@string/confirmar_cambios"
                android:textColor="@color/white"
                android:background="@drawable/anim_button_pressed"
                android:fontFamily="@font/montserrat_light"
                android:textAllCaps="false"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>
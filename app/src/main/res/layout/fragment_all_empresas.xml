<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.secondaryfragments.empresa.AllEmpresasFragment"
    android:background="@drawable/ic_rectangulo_meet"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:text="@string/top_locales"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="23sp"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/topLocalesNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_light"
            android:text="@string/top_locales_none"
            android:textColor="@color/gris_textos"
            android:textSize="15sp"
            android:visibility="gone"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/loading_animation_thin"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAllEmpresas"
            android:layout_marginTop="10dp"
            android:layout_marginStart="-5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/viewholder_experiencia"
    android:layout_margin="5dp">

    <FrameLayout
        android:id="@+id/topExperiencia"
        android:layout_width="180dp"
        android:layout_height="90dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagenTopExperiencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundCorners"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/degradado_experiencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tintMode="multiply"
            android:background="@drawable/ic_generic_experience"
            app:shapeAppearanceOverlay="@style/roundCorners"
            />

        <TextView
            android:id="@+id/nombreTopExperiencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Experiencia4"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_light"
            />

    </FrameLayout>

</LinearLayout>
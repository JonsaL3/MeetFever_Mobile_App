<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_solid_background_profile"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterprise_viewer"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonIrARegistrarse"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/anim_button_pressed"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/publicar_fever"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/foto_perfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circular"
                tools:background="@tools:sample/avatars" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/opinion_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/montserrat_light"
                android:hint="Escriba aqui su opinión de una @empresa o #experiencia"
                android:maxHeight="100dp"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_hint"
                android:textSize="15sp" />
            />

        </LinearLayout>

        <TextView
            android:id="@+id/numeroCaracteresOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/montserrat_light"
            android:text="@string/_0_250_caracteres"
            android:textColor="@color/gris_textos"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profilePicture"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            tools:ignore="SmallSp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp"
            android:background="@color/gris_textos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/montserrat_light"
            android:text="@string/meetmoji_emoji_que_represente_como_fu_tu_experiencia"
            android:textColor="@color/gris_textos"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profilePicture"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            tools:ignore="SmallSp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="50dp"
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:visibility="gone"
            app:lottie_rawRes="@raw/loading_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

            <GridLayout
                android:id="@+id/lechuga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="10"
                android:padding="15dp">

            </GridLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/no_seleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/montserrat_light"
            android:text="@string/no_seleccionado"
            android:textColor="@color/gris_textos"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profilePicture"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            tools:ignore="SmallSp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp"
            android:background="@color/gris_textos" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/enterprise_viewer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/preview_enterprise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundBottomCorners"
            tools:background="@tools:sample/avatars"
            android:visibility="gone"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/degradado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundBottomCorners"
            android:src="@drawable/ic_degradado_empresa_redactar"
            android:visibility="gone"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:paddingHorizontal="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/no_seleccionado_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_light"
                android:text="No ha seleccionado ningún local aún"
                android:textColor="@color/gris_textos"
                android:textSize="25sp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profilePicture"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                android:gravity="center"
                tools:ignore="SmallSp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/el_local_que_seleccione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_light"
                android:text="El local que mencione con @ delante del nombre aparecerá aqui abajo"
                android:textColor="@color/gris_textos"
                android:textSize="15sp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profilePicture"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                android:gravity="center"
                tools:ignore="SmallSp"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                />


            <TextView
                android:id="@+id/nombre_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_light"
                tools:text="CaniCars"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profilePicture"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                android:gravity="center"
                tools:ignore="SmallSp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/descripcion_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_light"
                tools:text="Bua tu mi tienda es la leche"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profilePicture"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                android:gravity="center"
                tools:ignore="SmallSp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
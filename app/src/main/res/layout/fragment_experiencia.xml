<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_gradient_shape"
    tools:context=".ui.fragments.secondaryfragments.experiencia.ExperienciaFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/experienica_container"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/informacion_experiencia_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/informaci_n_de_la_experiencia"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginHorizontal="10dp"
                >

                <FrameLayout
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagen_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundCorners"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/degradado_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_gradient_shape_experiencias_square"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundCorners"
                        />

                    <TextView
                        android:id="@+id/titulo_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat_light"
                        tools:text="Barack's cachimba, fiesta de las aceitunas verdes"
                        android:maxLines="3"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagen_empresa_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundCorners"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/degradado_empresa_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_gradient_shape_experiencias_square"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundCorners"
                        />

                    <TextView
                        android:id="@+id/boton_ver_empresa_texto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat_light"
                        tools:text="Ver empresa"
                        android:maxLines="3"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        />

                </FrameLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textoInformacionGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/informaci_n_general"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gris_textos"/>

            <TextView
                android:id="@+id/descripcion_experiencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_sed_do_eiusmod_tempor_incididunt_ut_labore_et_dolore_magna_aliqua_ut_enim_ad_minim_veniam_quis_nostrud_exercitation_ullamco_laboris_nisi_ut_aliquip_ex_ea_commodo_consequat_duis_aute_irure_dolor_in_reprehenderit_in_voluptate_velit_esse_cillum_dolore_eu_fugiat_nulla_pariatur_excepteur_sint_occaecat_cupidatat_non_proident_sunt_in_culpa_qui_officia_deserunt_mollit_anim_id_est_laborum"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/fecha_experiencia_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/fecha_de_la_experiencia"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gris_textos"
                />

            <TextView
                android:id="@+id/fecha_experiencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="25/12/23 a las 12:00"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/precio_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Precio:"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gris_textos"
                />

            <TextView
                android:id="@+id/precio_cifra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="30â‚¬"
                android:textColor="@color/white"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/texto_iva_y_tal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/iva_comisi_n_incluido"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boton_pagar"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:text="@string/comprar_entrada"
                android:textColor="@color/white"
                android:background="@drawable/ic_custom_boton"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
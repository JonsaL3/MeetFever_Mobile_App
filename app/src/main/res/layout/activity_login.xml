<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LoginActivity"
    android:background="@color/negro_fondo"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/ic_background_gradient_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="35sp"
                app:srcCompat="@drawable/ic_logo_meet_login"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:text="@string/meet_fever_inicia_sesi_n"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/ic_inputs_login"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/correo_electr_nico"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/montserrat_light"
                android:textSize="15sp"
                android:layout_marginTop="40dp"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_textos"
                />

            <EditText
                android:id="@+id/inputContrasenaLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/ic_inputs_login"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/contrase_a"
                android:inputType="textPassword"
                android:fontFamily="@font/montserrat_light"
                android:textColor="@color/gris_textos"
                android:textColorHint="@color/gris_textos"
                android:textSize="15sp"
                android:layout_marginTop="40dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonLoguearse"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:text="@string/iniciar_sesi_n"
                android:textColor="@color/white"
                android:background="@drawable/ic_custom_boton"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginTop="70dp"
                android:textAllCaps="false"
                />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_linea_divisoria"
                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_linea_divisoria"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/no_tienes_cuenta"
                    android:textColor="@color/gris_textos"
                    android:gravity="center"
                    />

            </GridLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonIrARegistrarse"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="35sp"
                android:background="@drawable/ic_custom_boton"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/registrarse"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
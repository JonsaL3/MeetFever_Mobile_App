<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:tools="http://schemas.android.com/tools">

    <style name="roundTopCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">23dp</item>
        <item name="cornerSizeTopRight">23dp</item>
    </style>

    <style name="roundTopRightCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">23dp</item>
    </style>

    <style name="roundBottomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">23dp</item>
        <item name="cornerSizeBottomRight">23dp</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="roundCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">23dp</item>
        <item name="cornerSizeTopRight">23dp</item>
        <item name="cornerSizeBottomLeft">23dp</item>
        <item name="cornerSizeBottomRight">23dp</item>
    </style>

    <!-- para hacer una imagen shapable totalmente circular -->
    <style name="circular" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- QR theme. -->
    <style name="Theme.MeetFeverQR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/seminegro_fondo</item>
        <item name="colorPrimaryVariant">@color/negro_fondo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rosa_meet</item>
        <item name="colorSecondaryVariant">@color/azul_meet</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/negro_fondo</item>

        <!--    Hago el que el tema tenga transparencias    -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>